# MotionWeaver Configuration
# Copy to .env and fill in your values

# --- Application ---
APP_NAME=MotionWeaver
DEBUG=True
USE_MOCK_API=False

# --- Database (MySQL 8.0+) ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=comicdrama

# --- Redis (Celery Broker & Result Backend) ---
REDIS_URL=redis://localhost:6379/0

# --- Media Volume ---
MEDIA_VOLUME=media_volume

# --- OpenRouter (Story AI + Image Gen) ---
OPENROUTER_API_KEY=your_openrouter_key_here
STORY_MODEL=google/gemini-3-flash-preview
IMAGE_MODEL=google/gemini-2.5-flash-image

# --- Volcengine Ark (Video Generation) ---
ARK_API_KEY=your_ark_api_key_here
ARK_VIDEO_MODEL=doubao-seedance-1-0-lite-i2v-250428
ARK_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3

# --- IndexTTS (Speech Synthesis) ---
INDEX_TTS_URL=http://localhost:8049
INDEX_TTS_VOICE=zh_male_tech
